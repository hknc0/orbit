# =============================================================================
# Orbit Royale Server - Environment Variables
# =============================================================================
# Copy this file to .env and modify as needed
# All values shown are defaults (can be omitted if unchanged)

# =============================================================================
# LOGGING
# =============================================================================

# Log level: error, warn, info, debug, trace
# Can also filter by module: orbit_royale_server=debug,tower_http=info
RUST_LOG=info

# =============================================================================
# SERVER
# =============================================================================

# Address to bind the server to
BIND_ADDRESS=0.0.0.0

# Port for WebTransport (QUIC/UDP)
PORT=4433

# Metrics endpoint port (Prometheus scraping)
METRICS_PORT=9090

# Maximum number of concurrent game rooms
MAX_ROOMS=100

# =============================================================================
# TLS (required for WebTransport)
# =============================================================================

# Path to TLS certificate file (PEM format)
# If not set, uses self-signed certificate
# TLS_CERT_PATH=/path/to/cert.pem

# Path to TLS private key file (PEM format)
# TLS_KEY_PATH=/path/to/key.pem

# =============================================================================
# BOTS
# =============================================================================

# Number of AI bots to spawn (normal mode)
BOT_COUNT=20

# Override number of gravity wells (default: dynamic based on player count)
# GRAVITY_WELLS=5

# =============================================================================
# SIMULATION MODE (Load Testing)
# =============================================================================
# Scales bots up and down in a sinusoidal pattern for stress testing

# Enable simulation mode
SIMULATION_MODE=false

# Minimum bots during simulation cycle
SIMULATION_MIN_BOTS=10

# Maximum bots during simulation cycle
SIMULATION_MAX_BOTS=3000

# Duration of one full cycle (min to max and back) in minutes
SIMULATION_CYCLE_MINUTES=10

# =============================================================================
# GRAVITY WAVE EXPLOSIONS
# =============================================================================
# Wells randomly explode creating expanding shockwaves that push players

# Master switch - enable/disable gravity wave explosions
GRAVITY_WAVE_ENABLED=true

# Wave expansion speed in units per second
# Higher = faster rings, less time to react
GRAVITY_WAVE_SPEED=300

# Thickness of the wave front where players get pushed (units)
# Thicker = easier to get caught
GRAVITY_WAVE_FRONT_THICKNESS=80

# Base impulse force applied to players (instant velocity change)
# Higher = more dramatic knockback
GRAVITY_WAVE_BASE_IMPULSE=180

# Maximum radius before wave despawns (units)
# Should be large enough to affect nearby players
GRAVITY_WAVE_MAX_RADIUS=2000

# Warning/charging duration before explosion (seconds)
# Players see pulsing glow for this long before boom
GRAVITY_WAVE_CHARGE_DURATION=2

# Minimum time between explosions per well (seconds)
GRAVITY_WAVE_MIN_DELAY=30

# Maximum time between explosions per well (seconds)
# Random delay chosen between MIN and MAX
GRAVITY_WAVE_MAX_DELAY=90

# =============================================================================
# DEBRIS SPAWNING
# =============================================================================
# Collectible particles that players can consume for mass
# Debris spawns across three zones: inner (near gravity wells), middle, outer

# Master switch - enable/disable debris spawning
DEBRIS_SPAWN_ENABLED=true

# Maximum debris particles in the game at once
# Higher = more crowded, but impacts performance
DEBRIS_MAX_COUNT=200

# Initial debris spawned at game start per zone
DEBRIS_INITIAL_INNER=50
DEBRIS_INITIAL_MIDDLE=40
DEBRIS_INITIAL_OUTER=30

# Spawn rates per second for SMALL debris (5 mass each)
# Inner zone has highest spawn rate (more activity near wells)
DEBRIS_SPAWN_RATE_INNER_SMALL=2.0
DEBRIS_SPAWN_RATE_MIDDLE_SMALL=1.0
DEBRIS_SPAWN_RATE_OUTER_SMALL=0.5

# Spawn rates per second for MEDIUM debris (15 mass each)
DEBRIS_SPAWN_RATE_INNER_MEDIUM=0.5
DEBRIS_SPAWN_RATE_MIDDLE_MEDIUM=0.3
DEBRIS_SPAWN_RATE_OUTER_MEDIUM=0.1

# Spawn rates per second for LARGE debris (30 mass each)
# Large debris is rare but very valuable
DEBRIS_SPAWN_RATE_INNER_LARGE=0.1
DEBRIS_SPAWN_RATE_MIDDLE_LARGE=0.05
DEBRIS_SPAWN_RATE_OUTER_LARGE=0.02

# Orbital velocity range for spawned debris (units/second)
# Debris orbits naturally around gravity wells
DEBRIS_ORBITAL_VELOCITY_MIN=10
DEBRIS_ORBITAL_VELOCITY_MAX=30
